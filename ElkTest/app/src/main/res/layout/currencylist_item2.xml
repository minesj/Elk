<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/currency_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/currency_list_item_height"
        android:layout_alignParentLeft ="true"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="16dp">

        <ImageView
            android:id="@+id/currency_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/cny"
            android:background="@drawable/currency_icon_bg"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/currency_icon"
            android:layout_toEndOf="@id/currency_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currency_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人民币"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:alpha="0.30"/>

            <TextView
                android:id="@+id/currency_symbol_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="CNY"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:alpha="0.30"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/checked_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/currency_selected_mark"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/divider_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp">

        <View
            android:id="@+id/divider_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:background="#19ffffff"
            android:alpha="0.12"/>

    </RelativeLayout>

</LinearLayout>